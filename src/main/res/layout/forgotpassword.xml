<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/uname_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:layout_below="@+id/textView9"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="21dp"
        android:text="Enter your secret code to get your password" />


    <EditText
        android:id="@+id/secretPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvsecret"
        android:layout_alignBottom="@+id/tvsecret"
        android:layout_alignLeft="@+id/uname_edit_text"
        android:layout_alignStart="@+id/uname_edit_text" />

    <TextView
        android:id="@+id/UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignBaseline="@+id/uname_edit_text"
        android:layout_alignBottom="@+id/uname_edit_text"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:id="@+id/tvsecret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/UserName"
        android:layout_alignRight="@+id/UserName"
        android:layout_below="@+id/UserName"
        android:layout_marginTop="62dp"
        android:text="secretcode" />

    <Button
        android:id="@+id/ResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secretPass"
        android:layout_marginTop="77dp"
        android:layout_toLeftOf="@+id/secretPass"
        android:layout_toStartOf="@+id/secretPass"
        android:text="GetPassword" />

</RelativeLayout>