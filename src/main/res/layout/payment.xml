<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">



    <Button
        android:id="@+id/ButtonAmountBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="136dp"
        android:layout_marginStart="136dp" />

    <TextView
        android:id="@+id/Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Amount:"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/AmountValue"
        android:layout_toStartOf="@+id/AmountValue"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp" />

    <TextView
        android:id="@+id/AmountValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ButtonAmountBack"
        android:layout_alignStart="@+id/ButtonAmountBack"
        android:layout_alignTop="@+id/Amount"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:text="TextView" />
</RelativeLayout>