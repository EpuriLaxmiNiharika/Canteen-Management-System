<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:text="List of people who opted to have food today" />

    <TextView
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17"
        android:layout_below="@+id/textView17"
        android:layout_marginTop="45dp"
        android:text="Breakfast" />

    <TextView
        android:id="@+id/l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/b1"
        android:layout_alignStart="@+id/b1"
        android:layout_below="@+id/b1"
        android:layout_marginTop="48dp"
        android:text="Lunch" />

    <TextView
        android:id="@+id/D1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:text="Dinner"
        android:layout_below="@+id/l1"
        android:layout_alignLeft="@+id/l1"
        android:layout_alignStart="@+id/l1" />

    <TextView
        android:id="@+id/people_breakfast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView17"
        android:layout_alignRight="@+id/textView17"
        android:layout_alignTop="@+id/b1"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:text="0" />

    <TextView
        android:id="@+id/people_lunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_above="@+id/D1"
        android:layout_alignLeft="@+id/people_breakfast"
        android:layout_alignStart="@+id/people_breakfast" />

    <TextView
        android:id="@+id/people_dinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/D1"
        android:layout_alignLeft="@+id/people_lunch"
        android:layout_alignStart="@+id/people_lunch"
        android:text="0" />

    <Button
        android:id="@+id/Canteen_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/people_dinner"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="71dp"
        android:layout_toEndOf="@+id/b1"
        android:layout_toRightOf="@+id/b1"
        android:text="Back" />

</RelativeLayout>